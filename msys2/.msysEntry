cp_msys_entry() {
local mydotfilesmsys=~/gitstuff/my-dotfiles/msys2
if [ -d "$mydotfilesmsys" ] && [ -r ~/.msysEntry ]; then
cp -i ~/.msysEntry "$mydotfilesmsys"
else
echo "Something is wrong.  Check and make sure the source and destination exist and are readable"
fi
}
